<div class="mt-8">
  <h2 class="text-xl font-semibold text-gray-900 mb-4">Brawlers</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Brawler</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Power</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trophies</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Highest Trophies</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gadgets</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Star Powers</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% player_brawlers.each do |player_brawler| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <%= image_tag "https://cdn.brawlify.com/brawlers/borderless/#{player_brawler.brawler.brawl_stars_id}.png",
                    class: "w-8 h-8 mr-2 object-contain",
                    alt: player_brawler.brawler.name %>
                <span class="font-medium"><%= player_brawler.brawler.name %></span>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= player_brawler.power %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= player_brawler.rank %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= number_with_delimiter(player_brawler.trophies) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= number_with_delimiter(player_brawler.highest_trophies) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= player_brawler.gadgets.length %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= player_brawler.star_powers.length %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 
<div class="min-h-screen bg-gray-100 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg p-6">
      <!-- Player Header -->
      <div class="flex justify-between items-start mb-8">
        <div class="flex items-center gap-4">
          <% if @player.icon_id %>
            <%= image_tag "https://cdn.brawlify.com/profile-icons/regular/#{@player.icon_id}.png", 
                class: "w-16 h-16 rounded-full", 
                alt: "Player Icon" %>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">
              <%= @player.name %>
            </h1>
            <div class="text-gray-500"><%= @player.tag %></div>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <%= button_to "Sync Player Data", 
              sync_player_path(@player),
              method: :post,
              class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors",
              data: { turbo_frame: "player_data" } %>
          <%= link_to "Back to Players", 
              players_path,
              class: "text-indigo-600 hover:text-indigo-800" %>
        </div>
      </div>

      <!-- Flash messages -->
      <div id="flash">
        <% if notice %>
          <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
            <%= notice %>
          </div>
        <% end %>
      </div>

      <%= render "player_data", player: @player %>
    </div>
  </div>
</div> 